<!-- Views/Book/Delete.cshtml -->
@model Libary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h4>Book</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Availability
        </dt>
        <dd class="col-sm-10">
            @Model.Availability
        </dd>
        <dt class="col-sm-2">
            Main Category
        </dt>
        <dd class="col-sm-10">
            @Model.MainCategory.CategoryName
        </dd>
        <dt class="col-sm-2">
            Sub Category
        </dt>
        <dd class="col-sm-10">
            @Model.SubCategory.SubcategoryName
        </dd>
        <dt class="col-sm-2">
            Book State
        </dt>
        <dd class="col-sm-10">
            @Model.BookState.StatusName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>
<a asp-action="Index" class="btn btn-primary">Return To Index</a>