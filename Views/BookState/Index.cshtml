
@model IEnumerable<Libary.Models.BookState>

@{
    ViewData["Title"] = "Book States";
}

<h2>Book States</h2>
<a asp-area="" style="color:blue" asp-controller="Admin" asp-action="Index">Return To The Main</a>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StatusId" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StatusId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StatusId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
