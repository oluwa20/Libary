<!-- Views/MainCategory/Delete.cshtml -->
@model Libary.Models.MainCategory

@{
    ViewData["Title"] = "Delete Main Category";
}

<h1>Delete Main Category</h1>

<h4>MainCategory</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>
<a asp-action="Index" class="btn btn-primary">Return To Index</a>