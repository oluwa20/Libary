
@model Libary.Models.SubCategory

@{
    ViewData["Title"] = "Delete Sub Category";
}

<h1>Delete Sub Category</h1>

<h4>SubCategory</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Subcategory Name
        </dt>
        <dd class="col-sm-10">
            @Model.SubcategoryName
        </dd>
        <dt class="col-sm-2">
            Main Category
        </dt>
        <dd class="col-sm-10">
            @Model.MainCategory.CategoryName
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubcategoryId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>
<a asp-action="Index" class="btn btn-primary">Return To Index</a>